<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="ufcg.com.showtime.EventFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/event_banner"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="NOME"
                android:textAlignment="center"
                android:textSize="30sp"
                android:id="@+id/event_nome"/>

            <TextView
                android:paddingTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Local: "
                android:textSize="20sp"
                android:layout_marginLeft="12dp"
                android:id="@+id/event_lugar"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Data: "
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:id="@+id/event_data"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Hora: "
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:id="@+id/event_hora"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
